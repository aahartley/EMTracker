@model IEnumerable<EMTracker.Models.Sample>

@{
    ViewData["Title"] = "Samples";
}

<h1>Samples</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a href="#" onclick=Delete(@item.Id)>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    function Delete(Id)  
   {  
       $.post("/Samples/TestDelete", { Id: Id }, function (data) {      //passing the id of the selected user to the action method for deletion  
           if (data != null) {  
               location.reload();  
               alert("User Deleted");  
           }  
           else {  
               alert("Error");  
           }  
       });  
   }  
</script>
